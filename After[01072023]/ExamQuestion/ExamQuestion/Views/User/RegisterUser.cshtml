            //debugger
            $.ajax({
                type: "post",
                url: "/User/GetStateList?CountryId=" + countryId,
                contentType: "html",
                success: function (response) {
                    //debugger
                    $('#StateId').empty();
                    $('#StateId').append(response);
                }
            })
        })
        $('#StateId').change(function () {
            var StateId = $(this).val();
            //debugger
            $.ajax({
                type: "post",
